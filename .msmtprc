defaults
auth on
port 465
tls on
tls_starttls off
tls_trust_file /usr/local/etc/openssl/cert.pem

account gmail
host smtp.gmail.com
from ryan.lue@gmail.com
user ryan.lue
passwordeval "pass email/ryan.lue@gmail.com"

account hello
